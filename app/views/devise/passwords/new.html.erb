<center>
  <h2>Forgot your password?</h2>
</center>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.email_field :email, placeholder: "Email address",autofocus: true, autocomplete: "email" ,class: "input" %>
  <%= f.submit "Send me reset password instructions" , class: "button"%><br>
  <%=  link_to "You Already Have An Account ?", new_userdevise_session_path %>
<% end %>
